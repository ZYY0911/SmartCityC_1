<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head3" />

    <LinearLayout
        android:id="@+id/lauyout_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="头像"
            android:textColor="#333"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/touxiang_1" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@mipmap/youjiantou" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lauyout_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="昵称"
            android:textColor="#333"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_nick"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="昵称"
            android:textColor="#333"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lauyout_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="性别"
            android:textColor="#333"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="性别"
            android:textColor="#333"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lauyout_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="联系电话"
            android:textColor="#333"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:hint="联系电话"
            android:textColor="#333"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lauyout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="证件号"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#ccc"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="保存修改"
            android:textColor="#333"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>